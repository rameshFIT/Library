@*@model IEnumerable<Library.Data.Model.Book>*@
@model IEnumerable<Library.ViewModels.BookViewModel>

    <div>
        @(Html
    .Grid(Model)
    .Build(columns =>
    {
        columns.Add(model => model.Name).Titled("Name");
        columns.Add(model => model.Language).Titled("Language");
        columns.Add(model => model.WeekDays).Titled("Week day");
        columns.Add(model => model.StateName).Titled("State");
        columns.Add(model => model.CityName).Titled("City");
    })
    .Empty("No data found")
    .Filterable()
    .Sortable()
    .Pageable()
    )
    </div>
<div class="EazyLinks">
    @Html.ActionLink("Create a Book","Create")
</div>


